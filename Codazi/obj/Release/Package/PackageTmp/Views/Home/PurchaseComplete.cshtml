@model Codazi.Models.PurchaseViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="main-section team" id="about">
    <div class="container">
        <div class="team-leader-block clearfix">
            <p>
                Please print or save the below information.  This will be required when installing the purchased application.
            </p>
            <br />
            <h3>Receipt</h3>
            <b>First Name:</b> @Html.DisplayFor(model => model.FirstName) <br />
            <b>Last Name:</b> @Html.DisplayFor(model => model.LastName)<br />
            <b>Email Address:</b> @Html.DisplayFor(model => model.EmailAddress) <br />
            <b>Company:</b> @Html.DisplayFor(model => model.CompanyName)<br />
            <b>Status:</b> @Html.DisplayFor(model => model.PurchaseStatus)<br />
            <b>Quantity:</b> @Html.DisplayFor(model => model.Quantity)<br />
            <b>Total:</b>@Html.DisplayFor(model => model.TotalAmount)<br />
            <b>Serial Number:</b> @Html.DisplayFor(model => model.SerialNumber)<br />
        </div>
    </div>
</section>

